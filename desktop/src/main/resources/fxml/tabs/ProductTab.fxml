<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<Tab fx:id="tabLogger" text="Produto" xmlns:fx="http://javafx.com/fxml/1"
     fx:controller="us.greatapps4you.greatsaltes.desktop.controllers.ProductTabController">
    <content>
        <GridPane alignment="center"
                  hgap="10" vgap="10">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints minWidth="100" prefWidth="100"
                                   maxWidth="Infinity" halignment="RIGHT">
                </ColumnConstraints>
                <ColumnConstraints minWidth="200" prefWidth="200"
                                   maxWidth="Infinity" hgrow="ALWAYS">
                </ColumnConstraints>
            </columnConstraints>

            <!-- Add Header Label -->
            <Label text="Cadastro de Produtos" GridPane.columnIndex="0"
                   GridPane.rowIndex="0" GridPane.columnSpan="2"
                   GridPane.rowSpan="1" GridPane.halignment="CENTER">
                <font>
                    <Font name="Arial" size="24"></Font>
                </font>
                <GridPane.margin>
                    <Insets top="20" right="0" bottom="20" left="0"></Insets>
                </GridPane.margin>
            </Label>


            <!-- Add SKU Label -->
            <Label text="SKU : " GridPane.columnIndex="0"
                   GridPane.rowIndex="1">
            </Label>
            <!-- Add SKU Text Field -->
            <TextField fx:id="sku" prefHeight="40"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>


            <!-- Add Description Label -->
            <Label text="Description : " GridPane.columnIndex="0"
                   GridPane.rowIndex="2">
            </Label>
            <!-- Add Description Text Field -->
            <TextField fx:id="description" prefHeight="40"
                       GridPane.columnIndex="1" GridPane.rowIndex="2"/>


            <!-- Add Save Button -->
            <Button fx:id="saveButton" text="Salvar"
                    prefWidth="100" prefHeight="40" defaultButton="true"
                    GridPane.columnIndex="0" GridPane.rowIndex="4"
                    GridPane.columnSpan="2" GridPane.rowSpan="1"
                    GridPane.halignment="CENTER"
                    onAction="#save">
                <GridPane.margin>
                    <Insets top="20" right="0" bottom="20" left="0"></Insets>
                </GridPane.margin>
            </Button>
        </GridPane>

        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0" SplitPane.resizableWithParent="false">
            <children>
                <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <AnchorPane prefHeight="32.0" prefWidth="235.0">
                            <children>
                                <Label graphicTextGap="0.0" prefHeight="30.0" prefWidth="114.0" text="Layouts" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" />
                            </children>
                        </AnchorPane>
                        <ListView fx:id="products" onMouseClicked="#productSelected" prefHeight="246.0" prefWidth="235.0" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </ListView>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </VBox>
            </children>
        </AnchorPane>
    </content>
</Tab>
